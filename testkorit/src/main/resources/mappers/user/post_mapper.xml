<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.springboot_study.mapper.PostMapper">

    <resultMap id="postResultMap" type="com.korit.springboot_study.entity.Post">
        <id property="userId" column="user_id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
    </resultMap>

    <insert id="insert" keyProperty="postId" useGeneratedKeys="true">
        insert into post_tb
        values (default, #{userId}, #{title}, #{content},
        now(),
        now())
    </insert>

    <select id="selectByPostId" resultMap="postResultMap">
        select
            post_id,
            user_id,
            title,
            content,
            create_at,
            update_at
        from
            post_tb
        where
            post_id = #{postId}
    </select>
    <select id="selectAllPost" resultType="com.korit.springboot_study.entity.Post">
        select
            post_id,
            user_id,
            title,
            content,
            create_at,
            update_at
        from
            post_tb
    </select>


</mapper>